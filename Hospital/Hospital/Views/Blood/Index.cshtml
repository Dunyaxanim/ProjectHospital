@model List<Blood>
@{
    ViewData["Title"] = "Index";
}




<div class="card">
    <div class="card-header">
        <h1 class="card-title">Mövcud qan miqdarı</h1>
    </div>

    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Mövcud qan miqdarı</th>
                    <th>İdarə et</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Blood item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Quantity  L
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary" style="color:white !important">Dəyiş</a>
                            <a asp-action="Take" asp-route-id="@item.Id" class="btn btn-secondary" style="color:white !important">Al</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
