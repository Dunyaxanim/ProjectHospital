@model Room
@{
    ViewData["Title"] = "Create";
}


<div asp-validation-summary="ModelOnly" class="text-danger">

</div>
<form method="post" enctype="multipart/form-data">
    <div class="card-body">

        <div class="form-group " id="maindepartment">
            <label>Aid olduğu şöbəni seçin </label>
            <select class="form-control" name="departmentid">
                @foreach (Department department in ViewBag.Department)
                {
                    <option value="@department.Id">@department.DepartmentName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Capacity">Otağın tutumu</label>
            <input class="form-control" id="exampleInputEmail1" placeholder="Neçə ədəd yataq yerləşdiyini qeyd edin" asp-for="@Model.Capacity">
            <span class="text-danger" asp-validation-for="@Model.Capacity"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Number">Otağın nömrəsi</label>
            <input class="form-control" id="exampleInputEmail1" placeholder="1" asp-for="@Model.Number">
            <span class="text-danger" asp-validation-for="@Model.Number"></span>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Yarat</button>
    </div>
</form>


