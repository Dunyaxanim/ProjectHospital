@model ResetPasswordVM
@{
    ViewData["Title"] = "CreateUser";
}


<div asp-validation-summary="ModelOnly" class="text-danger">

</div>
<form method="post" enctype="multipart/form-data">
    <div class="card-body">
        
        <div class="form-group">
            <label asp-for="@Model.Email">Email</label>
            <input class="form-control" placeholder="Soyad daxil edin" asp-for="@Model.Email">
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password">Şifrə</label>
            <input class="form-control" placeholder="Abc12!" asp-for="@Model.Password">
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CheckPassword">Şifrənizi təsdiq edin</label>
            <input class="form-control" placeholder="Abc12!" asp-for="@Model.CheckPassword">
            <span class="text-danger" asp-validation-for="@Model.CheckPassword"></span>
        </div>

    </div>
    <!-- /.card-body -->
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-danger" asp-action="Index">Geri qayit</a>
</form>


